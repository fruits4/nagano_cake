<div class="container">
  <div class="row">

    <h2>管理者ログイン</h2>


    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="row form-top-box">
        <%= f.label :email, class: "col-sm-1" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "col-sm-3" %>
      </div>

      <div class="row">
        <%= f.label :password, class: "col-sm-1" %>
        <%= f.password_field :password, autocomplete: "current-password", class: "col-sm-3" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end %>

      <div class="actions">
        <%= f.submit "Log in" %>
      </div>
    <% end %>

    <%= render "admins/shared/links" %>
  </div>
</div>