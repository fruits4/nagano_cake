<div class="container">
  <div class="row">
   <div class="admin-login">
      <h2 class="login-title">管理者ログイン</h2>
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="row form-top-box">
            <%= f.label :メールアドレス, class: "col-sm-2 col-xs-offset-3" %>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "col-sm-3" %>
          </div>

          <div class="row">
            <%= f.label :パスワード, class: "col-sm-2  col-xs-offset-3" %>
            <%= f.password_field :password, autocomplete: "current-password", class: "col-sm-3" %>
          </div>

          <% if devise_mapping.rememberable? %>
            <div class="field">
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me %>
            </div>
          <% end %>

          <div class="actions">
            <%= f.submit "ログイン", class: "btn", style: "margin-top: 20px;" %>
          </div>
        <% end %>
    </div>
  </div>
</div>