<div class = "row">
	<h2>会員一覧</h2>
</div>

<div class = "col-xs-10">
		<table class = "table table-hover">
			<thead>
				<tr>
					<th>会員ID</th>
					<th>名前</th>
					<th>メールアドレス</th>
					<th>会員ステータス</th>
				</tr>
			</thead>

			<tbody>
				<% @customers.each do |customer| %>
				<tr>
					<td><%= customer.id %></td>
					<td>
						<%= link_to admin_customer_path(customer) do %>
						<%= customer.last_name %>
						<%= customer.first_name %>
						<% end %>
					</td>
					<td><%= customer.last_name_kana %><%= customer.first_name_kana %></td>
					<td><%= customer.email %></td>
					<% if customer.is_deleted == false %>
					   <td><span class = "badge" style = "background :blue">会員（有効）</span></td>
					<% else %>
					   <td><span class = "badge" style = "background :red">退会済</span></td>
					<% end %>
				</tr>
				<% end %>
			</tbody>
		</table>
	</div>

