<div class="container">
	<div class="row">
		<h2>注文履歴詳細</h2>

		<%= form_with model: @order, url: admin_order_path(@order) do |f| %>

			<h3 class="#">購入者</h3>
			<%= @order.name %>

			<h3 class="#">配送先</h3>
			<%= @order.post_code %><br>
			<%= @order.address %><br>
			<%= @order.name %>

			<h3 class="#">支払い方法</h3>
			<%= @order.payment %>

			<h3 class="#">注文ステータス</h3>
				<%= f.select :status, Order.statuses.keys %>
				<%= f.submit "更新" %>

			<table>
				<thead>
					<tr>
						<th>商品名</th>
						<th>単価（税込）</th>
						<th>数量</th>
						<th>小計</th>
						<th>製作ステータス</th>
						<th></th>
					</tr>
				</thead>
				<tbody>
					<% @orderd_products.each do |orderd_product| %>
					<tr>
						<td><%= orderd_product.product.name %></td>
						<td><%= orderd_product.price * 1.08 %></td>
						<td><%= orderd_product.amout %></td>
						<td><%=  %></td>
					</tr>
					<% end %>
				</tbody>
			</table>
		<% end %>
	</div>
</div>