<div class="container">
	<div class="row">
		<h2>注文履歴一覧</h2>
		<table class="table ordered-table">
			<thead class="table-color">
				<tr class="table-color">
					<th>購入日時</th>
					<th>購入者</th>
					<th>注文個数</th>
					<th>注文ステータス</th>
				</tr>
			</thead>
			<% @orders.each do |order| %>
			<tbody>
				<tr>
					<td><%= link_to admin_order_path(order.id) do %>
						<%= order.created_at.strftime("%Y/%m/%d　%H:%M:%S") %>
						<% end %>
					</td>
					<td><%= order.customer.last_name %></td>
					<td><%= order.total_amount %>　<%= order.status %></td>
				</tr>
			</tbody>
			<% end %>
		</table>
		<%= paginate @orders %>
	</div>
</div>