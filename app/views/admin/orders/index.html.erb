<div class="container">
	<div class="row">
		<h2>注文履歴一覧</h2>
		<%= @orders.each do |order| %>
		<table class="table">
			<thead>
				<tr>
					<th>購入日時</th>
					<th>購入者</th>
					<th>注文個数</th>
					<th>注文ステータス</th>
				</tr>
			</thead>
			<tbody>
				<tr>
					<td><%= link_to　admin_order_path do %>
						<%= order.created_at %>
						<% end %>
					</td>
					<td><%= order.customre.name %></td>
					<td><%= order.count %></td>
					<td><%= order.orderd_product.status %></td>
				</tr>
			</tbody>
		</table>
		<% end %>
	</div>
</div>