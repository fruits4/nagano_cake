<div class="row">
	<% if @product_or_customer == '1' %>
		<table class="table">
			<thead>
				<tr>
					<th></th>
					<th>商品名</th>
				</tr>
			</thead>
			<tbody>
				<% @products.each do |product| %>
				<tr>
					<td><%= attachment_image_tag product, :image, :fill, 50, 50 %></td>
					<td><%= product.name %></td>
				</tr>
				<% end %>
			</tbody>
		</table>
	<% elsif @product_or_customer == '2' %>
		<table class="table">
			<% @customers.each do |customer| %>
				<td><%= customer.last_name %><%= customer.first_name %></td>
			<% end %>
		</table>
	<% end %>
</div>