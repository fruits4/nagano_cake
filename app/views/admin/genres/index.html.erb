<div class="row">
	<div class="col-xs-7">
		<div>
			<%= form_with model: @genre, url: admin_genres_path, local: true do |f| %>
			<div><%= f.text_field :name %></div>
			<div>
				<%= f.radio_button :is_active, :true, checked: true %>
				<%= f.label :status, "有効" %>
				<%= f.radio_button :is_active, :false %>
				<%= f.label :status, "無効" %>
				<%= f.submit %>
			</div>
			<% end %>
		</div>
		<table>
			<tr>
				<th class="col-xs-3">ジャンル</th>
				<th class="col-xs-1">状態</th>
				<th class="col-xs-3"></th>
			</tr>

			<% @genres.each do |genre| %>
			<tr>
				<td><%= genre.name %></td>
				<td>
					<%= genre.is_active?? '有効' : '無効' %>
				</td>
				<td>
					<%= link_to "編集する", edit_admin_genre_path(genre.id), class: 'genre_edit_button' %>
				</td>
			</tr>
			<% end %>
		</table>
	</div>
</div>
