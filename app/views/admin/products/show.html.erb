<div class = "row">
	<div class = "col-xs-5">
		<%= attachment_image_tag(@product, :image, size: '200x200') %>
	</div>

<div class = "col-7-xs">
	<table>
		<tr>
			<th>商品名</th>
			<td><%= @product.name %></td>
		</tr>
		<tr>
			<th>商品説明</th>
			<td><%= @product.explain %></td>
		</tr>
		<tr>
			<th>税込価格（税抜価格）</th>
			<td><%= (@product.price * 1.08).to_i %>（<%= @product.price %>）円</td>
		</tr>
		<tr>
			<th>販売ステータス</th>
			<td><%= @product.status ? "販売中" : "在庫なし" %></td>
		</tr>
	</table>
  <%= link_to "編集", edit_admin_product_path(@product), class: "btn btn-warning" %><br>
</div>
</div>
