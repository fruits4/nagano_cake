<div class="container">
  <div class="row">
  <p class="col-xs-4 customer_login_font">会員の方はこちらからログイン</p>
  </div>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

  <div class="row">
    <div class="col-xs-3"></div>
    <div class="col-xs-3"><%= f.label "メールアドレス" %></div>
    <div class="col-xs-6"><%= f.email_field :email, autofocus: true, autocomplete: "email" %></div>
  </div>

  <div class="row">
    <div class="col-xs-3"></div>
    <div class="col-xs-3"><%= f.label "パスワード" %></div>
    <div class="col-xs-6"><%= f.password_field :password, autocomplete: "current-password" %></div>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "Log in" %>
  </div>
</div>
<% end %>

<%= render "customers/shared/links" %>
