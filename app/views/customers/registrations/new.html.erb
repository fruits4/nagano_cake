<div class="container">
  <div class="row">
    <h2 class="">新規会員登録</h2>
  </div>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "customers/shared/error_messages", resource: resource %>

    <div class="row customer_font_sizing">
      <p class="col-xs-2">名前</p>
      <div class="col-xs-1">(姓)</div>
      <div class="col-xs-3"><%= f.text_field :last_name %></div>
      <div class="col-xs-1"></div>
      <div class="col-xs-1">(名)</div>
      <div class="col-xs-3"><%= f.text_field :first_name%></div>
    </div>

    <div class="row customer_font_sizing">
      <p class="col-xs-2">フリガナ</p>
      <div class="col-xs-1">(セイ)</div>
      <div class="col-xs-3"><%= f.text_field :last_name_kana %></div>
      <div class="col-xs-1"></div>
      <div class="col-xs-1">(メイ)</div>
      <div class="col-xs-3"><%= f.text_field :first_name_kana %></div>
    </div>

    <div class="row customer_font_sizing">
      <p class="col-xs-2">メールアドレス</p>
      <div class="col-xs-1"></div>
      <div class="col-xs-3"><%= f.email_field :email, autofocus: true, autocomplete: "email" %></div>
    </div>

    <div class="row customer_font_sizing">
      <p class="col-xs-3">郵便番号(ハイフンなし)</p>
      <div class="col-xs-3"><%= f.text_field :post_code %></div>
    </div>

    <div class="row customer_font_sizing">
      <p class="col-xs-2">住所</p>
      <div class="col-xs-1"></div>
      <div class="col-xs-9"><%= f.text_field :address %></div>
    </div>

    <div class="row customer_font_sizing">
      <p class="col-xs-3">電話番号(ハイフンなし)</p>
      <div class="col-xs-9"><%= f.text_field :phone_number %></div>
    </div>

    <div class="row customer_font_sizing">
      <p class="col-xs-3">パスワード(6文字以上)</p>
      <div class="col-xs-9"><%= f.password_field :password, autocomplete: "new-password" %></div>
    </div>

    <div class="row customer_font_sizing">
      <p class="col-xs-3">パスワード(確認用)</p>
      <div class="col-xs-9"><%= f.password_field :password_confirmation, autocomplete: "new-password" %></div>

    <div class="actions customer_btn_center"><%= f.submit "Sign up" %></div>
  <% end %>
</div>
<%= render "customers/shared/links" %>
