<div class="container">
	<div class="row">
<h2>マイページ</h2>

<p class="mypage-title"><strong>登録情報</strong></p>
<%= link_to "編集する", edit_public_customers_path, class: 'btn btn-primary' %>
<%= link_to "パスワードを変更する", '#', class: 'btn btn-primary' %>

<table class="table">
	<tr>
		<th>氏名</th>
		<td><%= @customer.last_name %></td>
		<%= @customer.first_name %>
	</tr>
	<tr>
		<th>カナ</th>
		<td><%= @customer.last_name_kana %><%= current_customer.first_name_kana %></td>
	</tr>
	<tr>
		<th>郵便番号</th>
		<td><%= current_customer.post_code %></td>
	</tr>
	<tr>
		<th>住所</th>
		<td><%= current_customer.address %></td>
	</tr>
	<tr>
		<th>電話番号</th>
		<td><%= current_customer.phone_number %></td>
	</tr>
	<tr>
		<th>メールアドレス</th>
		<td><%= @customer.email %></td>
	</tr>
</table>

<!-- れおのshippingができたらlinkつなげる -->
<p><strong>配送先</strong></p>
<%= link_to "一覧を見る", 'public_shippings_path(current_customer.id)' %>

<p><strong>注文履歴</strong></p>
<%= link_to "一覧を見る", 'public_orders_path(current_customer.id)' %>

	</div>
</div>