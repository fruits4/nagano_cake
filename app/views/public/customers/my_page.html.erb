<div class="container">
	<div class="row">
		<h2>マイページ</h2>

			<div class="content">
			<h4>登録情報</h4>
			<%= link_to edit_public_customers_path do %>
				<p class="btn btn-brackets2"><i class="far fa-edit"></i> 編集する</p>
			<% end %>

			<%= link_to edit_customer_registration_path, class: "edit-button" do %>
				<p class="btn btn-brackets"><i class="fas fa-unlock-alt"></i> パスワードを変更する</p>
			<% end %>

			<!-- 作り直し要 -->
			<div class="row">
				<div class="col-xs-6">
					<table class="table table-bordered mypage-table">
						<tr>
							<th class="col-sm-3 table-color">氏名</th>
							<td><%= @customer.last_name %>　<%= @customer.first_name %></td>
						</tr>
						<tr>
							<th class="table-color">カナ</th>
							<td><%= @customer.last_name_kana %>　<%= current_customer.first_name_kana %></td>
						</tr>
						<tr>
							<th class="table-color">郵便番号</th>
							<td><%= current_customer.post_code %></td>
						</tr>
						<tr>
							<th class="table-color">住所</th>
							<td><%= current_customer.address %></td>
						</tr>
						<tr>
							<th class="table-color">電話番号</th>
							<td><%= current_customer.phone_number %></td>
						</tr>
						<tr>
							<th class="table-color">メールアドレス</th>
							<td><%= @customer.email %></td>
						</tr>
					</table>
				</div>
			</div>

			<!-- れおのshippingができたらlinkつなげる -->
			<div class="row">
				<div class="col-sm-12">
					<div class="title-box shipping-title">
						<h4 class="mypage-title">配送先</h3>
						<%= link_to "一覧を見る", public_shippings_path, class: 'mypage-btn' %>
					</div>

					<div class="title-box">
						<h4 class="mypage-title">注文履歴</h3>
						<%= link_to "一覧を見る", public_orders_path, class: 'mypage-btn' %>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>