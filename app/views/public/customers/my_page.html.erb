<div class="container">
	<div class="row">
		<h2>マイページ</h2>

		<h4>登録情報</h4>
		<%= link_to "編集する", edit_public_customers_path, class: 'btn btn-primary' %>

		<%= link_to "パスワードを変更する", edit_customer_registration_path, class: 'btn btn-primary' %>

		<!-- 作り直し要 -->
		<div class="row">
			<div class="col-sm-6">
				<table class="table table-bordered">
					<tr>
						<th class="col-sm-3">氏名</th>
						<td><%= @customer.last_name %>　<%= @customer.first_name %></td>
					</tr>
					<tr>
						<th>カナ</th>
						<td><%= @customer.last_name_kana %>　<%= current_customer.first_name_kana %></td>
					</tr>
					<tr>
						<th>郵便番号</th>
						<td><%= current_customer.post_code %></td>
					</tr>
					<tr>
						<th>住所</th>
						<td><%= current_customer.address %></td>
					</tr>
					<tr>
						<th>電話番号</th>
						<td><%= current_customer.phone_number %></td>
					</tr>
					<tr>
						<th>メールアドレス</th>
						<td><%= @customer.email %></td>
					</tr>
				</table>
			</div>
		</div>

		<!-- れおのshippingができたらlinkつなげる -->
		<div class="row">
			<div class="col-sm-6">
			<table>
				<tr>
					<th>配送先</th>
					<td><%= link_to "一覧を見る", public_shippings_path, class: 'btn btn-primary' %></td>
				</tr>
				<tr>
					<th>注文履歴</th>
					<td><%= link_to "一覧を見る", public_orders_path, class: 'btn btn-primary' %></td>
				</tr>
			</table>
			</div>
		</div>

	</div>
</div>