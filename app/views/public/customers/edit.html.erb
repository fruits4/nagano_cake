<h2>登録情報編集</h2>

<%= form_with model: @customer, url: public_customers_path, local: true do |f| %>

	<%= f.label :名前 %><%= f.text_field :last_name %><%= f.text_field :first_name %>

	<%= f.label :フリガナ %><%= f.text_field :last_name_kana %><%= f.text_field :first_name_kana %>

	<%= f.label :メールアドレス %><%= f.text_field :mail %>

	<p>郵便番号（ハイフンなし）</p><%= f.label :post_code %>

	<p>住所</p><%= f.label :address %>

	<p>電話番号（ハイフンなし）</p><%= f.label :phone_number %>

	<%= f.submit "編集内容を保存する" %>

	<%= link_to "退会する" %>
	
<% end %>
