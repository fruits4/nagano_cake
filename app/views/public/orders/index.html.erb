<h1>注文履歴一覧</h1>

<table class="table table-bordered">
	<thead>
		<tr class="table-color">
			<th>注文日</th>
			<th>配送先</th>
			<th>注文商品</th>
			<th>支払い金額</th>
			<th>ステータス</th>
			<th>注文詳細</th>
		</tr>
	</thead>
	<tbody>
		<% @orders.each do |order| %>
		<tr>
			<td><%= order.created_at.strftime("%Y/%m/%d") %></td>
			<td><%= order.address %></td>
			<td>
			<% order.orderd_products.each do |orderd_product| %>
				<%= attachment_image_tag orderd_product.product, :image, :fill, 20, 20 %>
				<%= orderd_product.product.name %><br>
			<% end %>
			</td>
			<td><%= order.total_price %>円</td>
			<td><%= order.status %></td>
			<td>
				<%= link_to '表示する', public_order_path(order), class:'btn primary-btn btn-sm' %>
			</td>
		</tr>
		<% end %>
	</tbody>
</table>
