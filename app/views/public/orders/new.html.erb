<div class="row">
  <h3 class="col-xs-offset-2">注文情報入力</h3>
  <h3><strong>支払い方法</strong></h3>
  <%= form_with do |form| %>
    <%= form.radio_button :payment, :male %>
    <%= form.label(:クレジットカード) %><br>
    <%= form.radio_button :payment, :female %>
    <%= form.label(:銀行振り込み) %><br>
  <% end %>


  <h3><strong>お届け先</strong></h3>

  <%= form_with(model: @order, url: public_orders_path, method: :post ) do |f| %>
    <%= radio_button_tag('address_select', 1, checked: true) %>
    <%= f.label 'ご自身の住所' %>
    <%= current_customer.post_code %><%= current_customer.address %><%= current_customer.last_name %><%= current_customer.first_name %><br>
    <%= radio_button_tag('address_select', 2, checked: true) %>
    <%= f.label :address, '登録済住所' %><br>
    <%= radio_button_tag('address_select', 3, checked: true) %>
    <%= f.label :address, '新しい住所' %>
    <div class="form-group">
      <%= f.label :郵便番号（ハイフンなし）, :class => 'col-xs-3' %>
      <%= f.text_field :post_code, :class => 'orders-field' %><br>
    </div>
    <div class="form-group">
      <%= f.label :住所, :class => 'col-xs-3' %>
      <%= f.text_field :address, size:'50', :class => 'orders-field' %><br>
     </div>
    <div class="form-group">
      <%= f.label :宛名, :class => 'col-xs-3' %>
      <%= f.text_field :name, :class => 'orders-field' %>
    </div>
    <div class="text-center">
      <%= f.submit '確認画面へ進む', class:'btn btn-primary' %>
    </div>
  <% end %>
</div>
